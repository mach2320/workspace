<script>
    window.onload = function(){
        $("#buy_cart").onclick(function() {
            if(confirm("등록하시겠습니까?") == true){
                var chkArr = [];
                $("input[name=chk]:checked").each(function () {
                    chkArr.push($(this).val());
                });
                console.log(chkArr)

                $('cartChk').val(chkArr);

                $("#cartForm").attr("action", "patment");
                $("#cartForm").submit();
            }   else {
                return;
            };
        });
    }
</script>